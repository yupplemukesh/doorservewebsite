@model Doorserve.Core.Dtos.PageViewModel
@{
    ViewData["Title"] = "About";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var AboutUs = Model.PageContants.Where(x => x.SectionName == "about-us-section").FirstOrDefault();
    var SectionProfile = Model.PageContants.Where(x => x.SectionName == "section-profile").FirstOrDefault();
    var OurTeam = Model.PageContants.Where(x => x.SectionName == "section-our-team").FirstOrDefault();
    var QuickServe = Model.PageContants.Where(x => x.SectionName == "quick-service").FirstOrDefault();
    var ServiceSlider = Model.PageBanners.Where(x => x.SectionName == "service-slider").ToList();
    var viewData = new ViewDataDictionary(new Microsoft.AspNetCore.Mvc.ModelBinding.EmptyModelMetadataProvider(), new Microsoft.AspNetCore.Mvc.ModelBinding.ModelStateDictionary()) { { "BaseUrl", Model.BaseUrl } };
}

<div class="section about-us-section">
    @if (AboutUs != null)
    {
        @Html.Raw(AboutUs.Description)
    }
</div>

<div class="section-profile">
    @if (SectionProfile != null)
    {
        @Html.Raw(SectionProfile.Description)
    }
</div>

<div class="section-our-team text-center">
    @if (OurTeam != null)
    {
        @Html.Raw(OurTeam.Description)
    }
</div>

<partial name="_QuickServices" model="QuickServe" />
<!--service-info-->
<partial name="_ServiceSlider" model="ServiceSlider" view-data="viewData" />
